# Environment variables for Flask application
# Development configuration

# Database configuration
DATABASE_URL=postgresql://postgres:password@localhost:5433/fleet_db
SQLALCHEMY_DATABASE_URI=postgresql://postgres:password@localhost:5433/fleet_db

# Flask configuration
FLASK_ENV=development
FLASK_DEBUG=True

# Security - Generated random secret key for development
SECRET_KEY=dev-fleet-management-secret-key-2025-change-in-production

# Session Management Configuration
# Session timeout in hours (default: 8 hours)
SESSION_TIMEOUT_HOURS=8
# Remember me duration in days (default: 30 days)
REMEMBER_ME_DAYS=30

# Optional: Logging level
LOG_LEVEL=INFO
