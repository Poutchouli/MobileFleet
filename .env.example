# Environment variables for Flask application
# Copy this file to .env and fill in your actual values

# Database configuration
DATABASE_URL=postgresql://username:password@localhost:5433/database_name

# Flask configuration
FLASK_ENV=development
FLASK_DEBUG=True

# Security
SECRET_KEY=your-secret-key-here-generate-a-random-key

# Session Management Configuration
# Session timeout in hours (default: 8 hours)
SESSION_TIMEOUT_HOURS=8
# Remember me duration in days (default: 30 days)
REMEMBER_ME_DAYS=30

# Optional: Logging level
LOG_LEVEL=INFO
